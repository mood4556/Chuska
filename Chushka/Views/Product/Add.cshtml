@model Chushka.Models.InputProductModel
<main class="mt-3 mb-5">
    <h1 class="text-center">Create Product</h1>
    <hr class="hr-2 bg-dark" />
    <form class="mx-auto half-width" method="post" >
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" placeholder="Name..." asp-for="Name">
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input type="number" class="form-control" placeholder="Price..." asp-for="Price">
        </div>
        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea class="form-control"  rows="4" placeholder="Description..." asp-for="Description"></textarea>
        </div>
        <h4 class="text-center">Product Type</h4>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="product-type-holder mt-4 d-flex justify-content-around">
            @{
                string[] str = { "Food","Domestic","Health","Cosmetic","Other" };
                    @foreach(var item in str)
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="ProductType"  value="@item">
                    <label class="form-check-label" asp-for="@item">@item</label>
                </div>
            }
            }            
        </div>
        <hr class="hr-2 bg-dark half-width mt-4" />
        <div class="button-holder mt-2 d-flex justify-content-center">
            <button type="submit" class="btn chushka-bg-color">Create</button>
        </div>
    </form>
</main>